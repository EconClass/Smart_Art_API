<div class="row"></div>
    <div class="col-sm-4 col-sm-offset-4">
        {{#each data}}
            <form action="/api/quiz/{{quizId}}/question" method="post" class="question" id="{{@index}}">
                {{#if this.image}}
                    <legend>Question</legend>
                    <div>
                        <img src={{this.image}} alt="..." class="img-thumbnail">
                    </div>
                        

                    <label for="question-correct">{{{this.correct}}}</label>

                    <div class="form-group">
                        <label for="question-incorrect">Incorrect</label>
                        <input type="text" name="incorrect" class="form-control" placeholder="Not the correct answer.">
                    </div>

                    <div class="form-group">
                        <label for="question-incorrect">Incorrect</label>
                        <input type="text" name="incorrect" class="form-control" placeholder="Not the correct answer.">
                    </div>

                    <div class="form-group">
                        <label for="question-incorrect">Incorrect</label>
                        <input type="text" name="incorrect" class="form-control" placeholder="Not the correct answer.">
                    </div>
                    <div>
                        <button id="append-button" type="button" class="btn btn-primary">Add</button>
                    </div>
                {{/if}}
            </form>
        {{/each}}
        <div class='text-incorrect'>
            <button type="button" class="btn btn-danger">Create Quiz</button>
        </div>
    </div>
   
</div>

