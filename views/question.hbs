<div class="row"></div>
    <div class="col-sm-4 col-sm-offset-4">
        {{#each data}}
        <form name="question" action="/api/quiz/{{quizId}}/question" method="post" class="question" id="{{@index}}">
            <legend>Question</legend>
            <div>
                <img src={{this.image}} alt="..." class="img-thumbnail">
            </div>

            <label for="question-correct">{{{this.correct}}}</label>

            <div class="form-group">
                <label for="question-choices">Incorrect</label>
                <input id="input-0" type="text" name="choices" class="form-control" placeholder="Not the correct answer.">
            </div>

            <div class="form-group">
                <label for="question-choices">Wrong</label>
                <input id="input-1" type="text" name="choices" class="form-control" placeholder="Not the correct answer.">
            </div>

            <div class="form-group">
                <label for="question-choices">Not It</label>
                <input id="input-2" type="text" name="choices" class="form-control" placeholder="Not the correct answer.">
            </div>  
        </form>
        {{/each}}
        <div class='form-group'>
                <button type="submit" class="btn btn-danger">Create Quiz</button>
            </div>
    </div>
   
</div>

